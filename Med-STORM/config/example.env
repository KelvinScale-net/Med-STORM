# =============================================================================
# MED-STORM SOLID ENGINE CONFIGURATION
# =============================================================================

# PRIMARY LLM PROVIDER - OpenRouter (Gemini 2.5 Flash)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# FALLBACK LLM PROVIDER - DeepSeek (Optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# LEGACY OPENAI (Deprecated - use OpenRouter instead)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# KNOWLEDGE CONNECTORS
# =============================================================================

# PubMed Configuration
PUBMED_EMAIL=your_email@example.com
PUBMED_API_KEY=""

# Serper (Google Search) Configuration
SERPER_API_KEY=your_serper_api_key_here

# Local Corpus Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=corpus_bariatric_surgery_for_type_2_diabetes

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance Mode: speed, balanced, quality
PERFORMANCE_MODE=balanced

# Evidence Sources
MAX_EVIDENCE_SOURCES=15
ENABLE_PUBMED=true
ENABLE_SERPER=true
ENABLE_LOCAL_CORPUS=true

# Concurrent Operations
MAX_CONCURRENT_SEARCHES=5
MAX_CONCURRENT_SUBTOPICS=2
MAX_RESULTS_PER_QUESTION=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

CACHE_ENABLED=True
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=1000
REDIS_URL="redis://localhost:6379"

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Timeouts
DEFAULT_TIMEOUT_PROFILE=standard
LLM_TIMEOUT=60
CONNECTOR_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=med_storm.log

# Output Configuration
OUTPUT_DIR=output
REPORT_FORMAT=markdown  # Options: markdown, html, pdf

# Quality Filters
MIN_PUBLICATION_YEAR=2018  # Only include recent publications by default
MIN_CONFIDENCE_SCORE=0.5

# =============================================================================
# ADVANCED FEATURES (Optional)
# =============================================================================

# Systematic Review Engine
ENABLE_SYSTEMATIC_REVIEW=false
ENABLE_EVIDENCE_GRADING=true

# Process Rewards (Experimental)
ENABLE_PROCESS_REWARDS=false

# Streaming
ENABLE_STREAMING=true
